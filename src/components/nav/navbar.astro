<script is:inline>
  let valuesearch = "";
  let valueprovincy = "";

  const inputsearch = document.getElementById("inputsearch");
  const inputprovincy = document.getElementById("inputprovincy");
  const buttonsearchall = document.getElementById("buttonsearch");

  inputsearch?.addEventListener("input", (e) => {
    valuesearch = e.target.value;
  });

  inputprovincy?.addEventListener("input", (e) => {
    valueprovincy = e.target.value;
  });

  buttonsearchall?.addEventListener("click", () => {
    if (valuesearch === "") {
      alert("Pleas write a city");
      return;
    }
    window.location.href = `/searchresult/${valuesearch}?province=${valueprovincy}`;
  });

  inputsearch?.addEventListener("keydown", (e) => {
    if (e.key === "Enter") {
      if (valuesearch === "") {
        alert("Pleas write a city");
        return;
      }
      window.location.href = `/searchresult/${valuesearch}?province=${valueprovincy}`;
    }
  });
  inputprovincy?.addEventListener("keydown", (e) => {
