---
import Information from "./information.astro"
import Footer from "./footer.astro"
---

<main
  class="w-full h-full pt-20 text-black flex flex-col items-center font-poppins"
>
  <div class="mt-20 md:mt-40 text-center p-2">
    <h1
      class="font-extrabold md:max-w-[800px] text-transparent bg-clip-text bg-gradient-to-r from-amber-600 via-sky-950 to-emerald-700 md:text-6xl text-4xl"
    >
      Search for all the weather information you need
    </h1>
  </div>

  <div class="mt-20 md:mt-60">
    <button
      id="idbuttonsearch"
      class="flex flex-row items-center hover:scale-95 transition-all p-4 pl-8 rounded-[7px] pr-8 cursor-pointer bg-neutral-900 border-[2px] border-neutral-400 text-white"
    >
      Search
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        fill="currentColor"
        class="ml-4"
        viewBox="0 0 16 16"
      >
        <path
          d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"
        ></path>
      </svg></button
    >
  </div>
  <Information />
  <Footer />
</main>

<script>

  const idbuttonsearch = document.getElementById("idbuttonsearch");
  idbuttonsearch?.addEventListener("click", () => {
    window.location.href = "/search";
  });
</script>
